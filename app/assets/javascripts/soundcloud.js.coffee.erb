$(document).ready ->
  
  # Initiate client-side auth flow with SC. 
  $('#connectButton').click ->
    SC.initialize client_id: "<%= SOUNDCLOUD[:client_id] %>", redirect_uri: "<%= SOUNDCLOUD[:client_callback] %>"
    SC.connect -> location.href = '/'
